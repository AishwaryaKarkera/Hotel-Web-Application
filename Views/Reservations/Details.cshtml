@model IEnumerable<Wanderlust04.Models.Reservation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Booking Details</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CheckIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GuestId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.Hotel.HotelName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.Hotel.Price)

        </th>

        <th>
            @Html.DisplayNameFor(model => model.Room.RoomType)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.RoomType)

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CheckIn)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CheckOut)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RoomId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GuestId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Room.Hotel.HotelName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Room.Hotel.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Room.RoomType)
    </td>
    
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
    }

</table>
